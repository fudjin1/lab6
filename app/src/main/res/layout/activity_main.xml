<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_gravity="center"
            android:layout_margin="3pt"
            android:src="@drawable/calculator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="gravity"
                android:layout_marginLeft="10pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="gravity"
                android:layout_marginRight="10pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/X"
                android:layout_width="0dp"
                android:layout_height="14pt"
                android:layout_weight="1"
                android:layout_marginLeft="10pt"
                android:textAlignment="textEnd"
                android:hint="Первый операнд"
                android:inputType="numberDecimal"
                android:background="@drawable/oformleniye"/>

            <EditText
                android:id="@+id/Y"
                android:layout_width="0pt"
                android:layout_height="14pt"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_marginRight="10pt"
                android:hint="Второй операнд"
                android:inputType="numberDecimal"
                android:background="@drawable/oformleniye"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Результат"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_margin="3pt"/>

        <EditText
            android:id="@+id/rez"
            android:layout_width="152pt"
            android:layout_height="14pt"
            android:layout_gravity="center"
            android:hint="вывод"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:background="@drawable/oformleniye" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5pt">

            <Button
                android:id="@+id/plus"
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:text="X+Y"
                android:textAlignment="center"
                android:layout_marginLeft="10pt"/>

            <Button
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:text="X-Y"
                android:textAlignment="center"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"/>

            <Button
                android:id="@+id/umnogit"
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:text="X*Y"
                android:textAlignment="center"
                android:layout_marginRight="10pt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/deleniye"
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_weight="2"
                android:text="X/Y"
                android:textAlignment="center"
                android:layout_marginLeft="10pt"/>

            <Button
                android:id="@+id/dvoichnuy"
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:text="X в двоичный код"
                android:textSize="10sp"
                android:textAlignment="center"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="10pt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mod"
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_weight="6"
                android:text="X mod Y"
                android:textSize="6sp"
                android:textAlignment="center"
                android:layout_marginLeft="10pt"/>

            <Button
                android:id="@+id/xor"
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_weight="6"
                android:text="X xor Y"
                android:textSize="7sp"
                android:textAlignment="center"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"/>

            <Button
                android:id="@+id/rezVx"
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_weight="5"
                android:text="Результат ->X"
                android:textSize="7sp"
                android:textAlignment="center"
                android:layout_marginRight="10pt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
</ScrollView>
